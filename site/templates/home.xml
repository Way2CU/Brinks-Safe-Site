<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/ga.txt"/>
			<cms:raw file="parts/fbpixel.txt"/>
		</head>

		<body>
			<cms:svg file="site_sprite.svg"/>
			<cms:mobile>
				<header>
				<!-- Background image logo -->
					<a href="top" class="logo"></a>

					<!-- Phone -->
					<a
						href="'tel:'.urlencode(Language::get_Text('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:svg file="site_sprite.svg" symbol="icon-phone"/>
					</a>
				</header>
			</cms:mobile>
			<section class="header">
				<cms:desktop>
				<!-- Background image logo -->
					<a href="top" class="logo"></a>

					<p><cms:text constant="header_msg"/></p>

					<!-- Phone -->
					<a
						href="'tel:'.urlencode(Language::get_Text('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone" />
						<cms:svg file="site_sprite.svg" symbol="icon-phone"/>
					</a>
				</cms:desktop>
				<cms:module
					name="articles"
					action="show"
					group="header_articles"
					text_id="header_article"
					template="parts/article_template.xml"
					/>

					<!-- mobile image seperator -->
					<cms:mobile>
						<img
							src="_BASEURL.'/site/images/mobile_header.jpg'"
							alt="woman_with_coffe"
							cms:eval="src"
							/>
					</cms:mobile>

					<div class="form_container">
						<h3><cms:text constant="leave_details"/></h3>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact_form"
							/>
					</div>
			</section>
			<!-- section features -->
			<section class="features">
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
						<param name="sprite" value="site_sprite.svg"/>
					</cms:module>
				</ul>
			</section>
			<!-- section images -->
			<section class="assets">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="assets_gallery"
					order_by="text_id"
					template="parts/gallery_template.xml"
					/>
			</section>
			<!-- Static banner -->
			<div class="banner">
				<!-- Background image logo -->
				<a href="top" class="logo"></a>
				<h2><cms:text constant="how_to_do"/></h2>
				<!-- Phone -->
				<a
					href="'tel:'.urlencode(Language::get_Text('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone" />
				</a>
			</div>
			<!-- section benifits-->
			<section class="benifits">
				<!-- Features -->
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features_benifits"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
						<param name="sprite" value="site_sprite.svg"/>
					</cms:module>
				</ul>
			</section>
			<!-- Footer -->
			<footer>
				<!-- Background image logo -->
				<a href="top" class="logo"></a>
				<h2><cms:text constant="how_to_do"/></h2>
				<!-- Phone -->
				<a
					href="'tel:'.urlencode(Language::get_Text('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone" />
				</a>
				<!-- mobile image seperator -->
				<cms:mobile>
					<img
						src="_BASEURL.'/site/images/mobile_footer.jpg'"
						alt="brinks_car"
						cms:eval="src"
						/>
				</cms:mobile>
				<div class="form_container">
					<h3><cms:text constant="leave_details"/></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</footer>
			<!-- Copyright -->
			<cms:template file="stock/copyright.xml">
				<param name="holder" value="copyright_holder"/>
				<param name="text" value="copyright_text"/>
				<param name="light" value=""/>
			</cms:template>
			<cms:raw file="parts/google_remarketing.txt"/>
		</body>
	</html>
</document>
